Description:TN Indegency Calculator
<script>
function fedpov(house,income,percentage){
var line = NaN;

		if (house == 1) {
			line = 13590;
		} else if (house == 2) {
			line = 18310;
		} else if (house == 3) {
			line = 23030;
		} else if (house == 4) {
			line = 27750;
		} else if (house == 5) {
			line = 32470;
		} else if (house == 6) {
			line = 37190;
		} else if (house == 7) {
			line = 41910;
		} else if (house == 8) {
			line = 44630;
		} else if (house > 8) {
			line = 44660 + (house-8)*4720;
		}

		if (income <= (line*(percentage/100))) {
			return true;
		} else {
			return false;
		}
}


</script>

<script>
function lwageoneadult(children,wage){
	if (children==0)  {

		if (wage<17){
			return true;
		} else {
			return false;
		}
	} else if(children==1){

		if (wage<17){
			return true;
		} else {
			return false;
		}
	}

}

</script>


