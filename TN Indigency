<script>
function lwagetwoadulttwo(children,wage){
	if (children==0)  {

		if (wage<12.86){
			return true;
		} else {
			return false;
		}
	} else if(children==1){

		if (wage<16.99){
			return true;
		} else {
			return false;
		}
	} else if(children==2){

		if (wage<37.64){
			return true;
		} else {
			return false;
		}
	}else if(children==3){

		if (wage<21.44){
			return true;
		} else {
			return false;
		}
	}
}

</script>

